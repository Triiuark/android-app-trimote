<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/inode_preference"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:minHeight="100000dp"
		android:minWidth="100000dp"
		android:orientation="vertical"><!-- min. width and height values to force fullscreen -->
	<TextView
			android:id="@+id/inode_preference_selected"
			style="@style/TextView"
			android:minLines="3" />

	<View
			android:id="@+id/inode_preference_list_divider"
			style="@style/HorizontalDivider" />

	<ListView
			android:id="@+id/inode_preference_list"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fastScrollEnabled="true" />
</LinearLayout>
